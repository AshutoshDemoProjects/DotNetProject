@model Spice.Models.ShoppingCart
@using Spice.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container shadow-lg p-3 bg-white">
    <h2 class="text-info">Details Item</h2>
    <hr />
    <div class="p-3 m-2">

        <form method="post"  autocomplete="off">
            <input type="hidden" asp-for="MenuItem.Id" />
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="col-md-12 d-md-none">
                    <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
                </div>
                <div class="col-md-8">
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.Name"></label>
                        </div>
                        <div class="col-md-8">
                            <input type="hidden" asp-for="MenuItemId" />
                            <input asp-for="MenuItem.Name" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.Description"></label>
                        </div>
                        <div class="col-md-8">
                            <div class="border p-2">
                                @Html.Raw(Model.MenuItem.Description)
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.Price"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="MenuItem.Price" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.CategoryId"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="MenuItem.Category.Name" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.SubCategoryId"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="MenuItem.SubCategory.Name" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="MenuItem.Spicyness"></label>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control" disabled></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4">
                            <label class="text-info font-weight-bold" asp-for="Count"></label>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="Count" class="form-control" />
                            <span asp-validation-for="Count" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-4 offset-md-4">
                            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-warning form-control">Add To Cart</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 d-none d-md-block">
                    <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
                </div>
            </div>
            
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}