@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container shadow-lg p-3 bg-white">
    <h2 class="text-info">Details Coupon</h2>
    <hr />
    <div class="p-3 m-2">

        <form>
            <div class="form-group row">
                <div class="col-12 border">
                    @{
                    var base64 = Convert.ToBase64String(Model.Picture);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                    }
                    <img src="@imgsrc" height="100%" width="100%" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CouponType"></label>
                </div>
                <div class="col-6">
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control" disabled></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Discount"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Discount" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MinimumAmount"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MinimumAmount" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="IsActive"></label>
                </div>
                <div class="col-6">
                    <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" asp-for="IsActive" class="custom-control-input" disabled />
                        <label class="custom-control-label">Check this for activate</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-2"><a class="btn btn-info form-control" asp-action="Edit" asp-route-Id="@Model.Id">Edit</a></div>
                <div class="col-3"><a asp-action="Index" class="btn btn-success form-control">Back To List</a></div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}