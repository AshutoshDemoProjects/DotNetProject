@model Spice.Models.SubCategory
@using Spice.Extensions
@{
    ViewData["Title"] = "Details SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-lg p-3 bg-white">
    <h2 class="text-info">Details SubCategory</h2>
    <hr />
    <form>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Category.Name"></label>
            </div>
            <div class="col-6">
                @*<select id="ddlCategorylist" disabled asp-for="SubCategory.CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)" class="form-control"></select>*@
                <input class="form-control" asp-for="Category.Name" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3"><button type="submit" class="btn btn-info form-control" asp-action="Edit" asp-route-Id="@Model.Id">Edit</button></div>
            <div class="col-3"><a asp-action="Index" class="btn btn-success form-control">Back To List</a></div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}