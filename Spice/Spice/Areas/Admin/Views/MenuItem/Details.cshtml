@model Spice.Models.ViewModels.MenuItemViewModel
@using Spice.Extensions
@{
    ViewData["Title"] = "Details MenuItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-lg p-3 bg-white">
    <h2 class="text-info">Details Menu Item</h2>
    <hr />
    <div class="p-3 m-2">

        <form method="post">
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="MenuItem.Name" class="form-control" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.Description"></label>
                        </div>
                        <div class="col-8">
                            @Html.TextAreaFor(m => m.MenuItem.Description, new { @class = "form-control",@disabled = "true", rows = "4"})
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.Price"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="MenuItem.Price" class="form-control" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.CategoryId"></label>
                        </div>
                        <div class="col-8">
                            @*<select asp-for="MenuItem.CategoryId" id="CategoryId" asp-items="Model.CategoryList.ToSelectListItem(Model.MenuItem.CategoryId)" class="form-control"></select>*@
                            <input asp-for="MenuItem.Category.Name" class="form-control" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.SubCategoryId"></label>
                        </div>
                        <div class="col-8">
                            @*<select asp-for="MenuItem.SubCategoryId" id="SubCategoryId" asp-items="@(new SelectList(string.Empty," Id","Name"))" class="form-control"></select>*@
                            <input asp-for="MenuItem.SubCategory.Name" class="form-control" disabled/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="MenuItem.Spicyness"></label>
                        </div>
                        <div class="col-8">
                            @*<select asp-for="MenuItem.Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control"></select>*@
                            <input asp-for="MenuItem.Spicyness" class="form-control" disabled/>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px;border: 1px solid #bbb9b9;" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3"><a class="btn btn-info form-control" asp-action="Edit" asp-route-Id="@Model.MenuItem.Id">Edit</a></div>
                <div class="col-3"><a asp-action="Index" class="btn btn-success form-control">Back To List</a></div>
            </div>
        </form>
    </div>
</div>