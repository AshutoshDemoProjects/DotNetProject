@model Spice.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container shadow-lg p-3 bg-white">
    <h2 class="text-info">Delete Category</h2>
    <hr />
    <div class="p-3 m-2">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" readonly />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-danger form-control" asp-route-id="Model.Id">Delete</button>
                </div>
                <div class="col-3"><a asp-action="Index" class="btn btn-success form-control">Back To List</a></div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}