@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container shadow p-3 bg-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-info text-white"><i class="fas fa-plus"></i> Create Category</a>
        </div>
    </div>
    <br/>
    <div>
        @if (Model.Count() > 0) { 
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m=>m.Name)</th>
                    
                    <th></th>
                </tr>
                @foreach (var item in Model) { 
                    <tr>
                        <td>@Html.DisplayFor(m=>item.Name)</td>
                        
                        <td class="text-center"><partial name="_TableButtonPartial" model="item.Id"/></td>
                    </tr>
                }
            </table>   
        }else { 
            <p>No Category in database.</p>
        }
    </div>
</div>